<UserControl 
    x:Name="self"
    x:Class="FBReader.App.Views.Controls.TitlePanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <StackPanel Margin="12,16,0,28">
        <TextBlock Text="{Binding ElementName=self, Path=Title}" Style="{StaticResource TitleStyle}"/>
        <TextBlock Text="{Binding ElementName=self, Path=Subtitle}" Margin="9,-10,0,0" Style="{StaticResource PhoneTextTitle1Style}"
                   x:Name="SubtitleText" Visibility="Collapsed"/>
    </StackPanel>
    
</UserControl>